// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model News {
  id       Int      @id @default(autoincrement())
  title    String
  category String
  date     DateTime
  time     String
  image    String
  link     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("news")
}

model Article {
  id        String   @id
  headline  String
  category  String
  timestamp String
  image     String
  excerpt   String
  content   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("articles")
}

enum UserStatus {
  PEMBACA_FE_NEWS
  PEMINAT_FE_NEWS
  PECINTA_FE_NEWS
}

model User {
  id           Int         @id @default(autoincrement())
  fullName     String
  phone        String
  email        String      @unique
  username     String?     @unique
  status       UserStatus  @default(PEMBACA_FE_NEWS)
  interests    String?     
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("users")
}

